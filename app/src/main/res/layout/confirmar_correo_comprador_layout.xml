<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".activitys.comprador.registro.ConfirmarCorreoCompradorActivity">

    <TextView
        android:id="@+id/verification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verifica tu correo electrónico"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#14AE5C"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/verification_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:text="Se ha enviado un correo electrónico de verificación a tu dirección de correo electrónico. Por favor, haz clic en el enlace de verificación para activar tu cuenta."
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>


    <Button
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#14AE5C"
        android:text="Continuar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar" />

    <Button
        android:id="@+id/resend_verification_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reenviar correo de verificación"
        android:backgroundTint="#004422"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/text_color"
        android:visibility="gone"/>



</LinearLayout>
